<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane fx:id="root"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.QuestionViewController"
            stylesheets="@question-view.css">

    <!-- Page padding -->
    <padding><Insets top="40" right="64" bottom="40" left="64"/></padding>

    <!-- ─────────────────────────  TOP BAR  ─────────────────────────── -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="16">
            <Label text="QUESTIONS" styleClass="page-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER_RIGHT" spacing="6">
                <Label fx:id="addQuestionText" text="Add Question" styleClass="add-question-label"/>
                <ImageView fitHeight="18" preserveRatio="true">
                    <image>
                        <Image url="@/icons/icon-plus.png"/>
                    </image>
                </ImageView>
            </HBox>
        </HBox>
    </top>

    <!-- ────────────────────────  MAIN LIST  ────────────────────────── -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
            <content>
                <VBox fx:id="questionList" spacing="16"/>
            </content>
        </ScrollPane>
    </center>

    <!-- ────────────────────────  FOOTER BAR  ───────────────────────── -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="24">
            <Button fx:id="csvUploadBtn" text="CSV Upload" styleClass="secondary-btn">
                <graphic>
                    <ImageView fitHeight="18" preserveRatio="true">
                        <image>
                            <Image url="@/icons/icon-plus.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="resetBtn" text="Reset Questions" styleClass="secondary-btn"/>
            <Button fx:id="saveBtn" text="Save Questions" styleClass="primary-btn"/>
        </HBox>
    </bottom>
</BorderPane>
