<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.QuestionGameAdminController"
            stylesheets="@/css/question-game.css">

    <!-- TOP PLAYER HEADER -->
    <top>
        <HBox alignment="CENTER" spacing="20" styleClass="player-header">
            <children>
                <VBox alignment="CENTER" spacing="4" styleClass="player-box player-1">
                    <Label text="01" styleClass="player-number"/>
                    <Label text="15 Points" styleClass="player-points"/>
                    <Label text="Name Player One" styleClass="player-name"/>
                </VBox>
                <VBox alignment="CENTER" spacing="4" styleClass="player-box player-2">
                    <Label text="02" styleClass="player-number"/>
                    <Label text="15 Points" styleClass="player-points"/>
                    <Label text="Name Player Two" styleClass="player-name"/>
                </VBox>
                <VBox alignment="CENTER" spacing="4" styleClass="player-box player-3">
                    <Label text="03" styleClass="player-number"/>
                    <Label text="15 Points" styleClass="player-points"/>
                    <Label text="Name Player Three" styleClass="player-name"/>
                </VBox>
                <VBox alignment="CENTER" spacing="4" styleClass="player-box player-4">
                    <Label text="04" styleClass="player-number"/>
                    <Label text="15 Points" styleClass="player-points"/>
                    <Label text="Name Player Four" styleClass="player-name"/>
                </VBox>
            </children>
        </HBox>
    </top>

    <!-- CENTER QUESTION AND ANSWERS -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="30" bottom="30" left="30" right="30"/>
            </padding>

            <!-- Question Section -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="CURRENT QUESTION" styleClass="section-label"/>
                <Label text="This is the question that is being asked to the players. They should buzz as soon as they know the answer."
                       wrapText="true" styleClass="main-question"/>
            </VBox>

            <!-- Answer Cards -->
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" spacing="10" styleClass="answer-card">
                    <Label text="Answer A" styleClass="answer-title"/>
                    <Label text="Answer A text goes here." wrapText="true" styleClass="answer-text"/>
                </VBox>
                <VBox alignment="CENTER" spacing="10" styleClass="answer-card">
                    <Label text="Answer B" styleClass="answer-title"/>
                    <Label text="Answer B text goes here." wrapText="true" styleClass="answer-text"/>
                </VBox>
                <VBox alignment="CENTER" spacing="10" styleClass="answer-card correct-answer">
                    <Label text="Answer C" styleClass="answer-title"/>
                    <Label text="Answer C text goes here." wrapText="true" styleClass="answer-text"/>
                </VBox>
                <VBox alignment="CENTER" spacing="10" styleClass="answer-card">
                    <Label text="Answer D" styleClass="answer-title"/>
                    <Label text="Answer D text goes here." wrapText="true" styleClass="answer-text"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- BOTTOM CONTROL BAR -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="40">
            <padding>
                <Insets top="20" bottom="20" left="30" right="30"/>
            </padding>
            <children>
                <Label text="Player 02 Buzzed!" styleClass="buzz-label"/>
                <Button fx:id="correctBtn" text="Correct" styleClass="correct-btn"/>
                <Button fx:id="wrongBtn" text="Wrong" styleClass="wrong-btn"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="0:46" styleClass="timer-label"/>
                <Button fx:id="unlockBtn" text="Unlock Buzzers" styleClass="unlock-btn"/>
                <Button fx:id="nextBtn" text="Next Question" styleClass="next-btn"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
