<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.ImageGameAdminController"
            stylesheets="@/css/image-game.css">

    <!-- TOP PLAYER HEADER -->
    <top>
        <HBox   alignment="CENTER">

            <!-- Card 1 -->
            <StackPane fx:id="card1" styleClass="player-card, red"  alignment="CENTER" HBox.hgrow="ALWAYS">
                <!-- NEW: use a single HBox so the big number
                     sits to the left of BOTH labels -->
                <HBox alignment="CENTER" spacing="10" >
                    <!-- big number, same height as the VBox next to it -->
                    <Label text="01" styleClass="player-number"/>

                    <!-- points + name stacked vertically -->
                    <VBox alignment="CENTER_LEFT" spacing="2">
                        <Label text="15 Points" styleClass="player-points"/>
                        <Label text="Name Player One" styleClass="player-name"/>
                    </VBox>
                </HBox>
            </StackPane>


            <!-- Card 2 -->
            <StackPane fx:id="card2" styleClass="player-card, lilac" GridPane.columnIndex="2"  HBox.hgrow="ALWAYS">
                <!-- NEW: use a single HBox so the big number
                     sits to the left of BOTH labels -->
                <HBox alignment="CENTER" spacing="10">
                    <!-- big number, same height as the VBox next to it -->
                    <Label text="02" styleClass="player-number"/>

                    <!-- points + name stacked vertically -->
                    <VBox alignment="CENTER_LEFT" spacing="2">
                        <Label text="15 Points" styleClass="player-points"/>
                        <Label text="Name Player Two" styleClass="player-name"/>
                    </VBox>
                </HBox>
            </StackPane>

            <!-- Card 3 -->
            <StackPane fx:id="card3" styleClass="player-card, peach" GridPane.columnIndex="3"  HBox.hgrow="ALWAYS">
                <!-- NEW: use a single HBox so the big number
                     sits to the left of BOTH labels -->
                <HBox alignment="CENTER" spacing="10">
                    <!-- big number, same height as the VBox next to it -->
                    <Label text="03" styleClass="player-number"/>

                    <!-- points + name stacked vertically -->
                    <VBox alignment="CENTER_LEFT" spacing="2">
                        <Label text="15 Points" styleClass="player-points"/>
                        <Label text="Name Player Three" styleClass="player-name"/>
                    </VBox>
                </HBox>
            </StackPane>

            <!-- Card 4 -->
            <StackPane fx:id="card4" styleClass="player-card, pink" alignment="CENTER"  HBox.hgrow="ALWAYS">
                <!-- NEW: use a single HBox so the big number
                     sits to the left of BOTH labels -->
                <HBox alignment="CENTER" spacing="10">
                    <!-- big number, same height as the VBox next to it -->
                    <Label text="04" styleClass="player-number"/>

                    <!-- points + name stacked vertically -->
                    <VBox alignment="CENTER_LEFT" spacing="2">
                        <Label text="15 Points" styleClass="player-points"/>
                        <Label text="Name Player Four" styleClass="player-name"/>
                    </VBox>
                </HBox>
            </StackPane>
        </HBox>
    </top>

    <!-- CENTER QUESTION AND ANSWERS -->
    <center>
        <VBox fx:id="mainContainer" alignment="CENTER" spacing="48" styleClass="question-block-padding">
            <padding>
                <Insets top="20" bottom="20" right="30"/>
            </padding>
            <children>
                <!-- Manage Images Button in Top Right -->
                <HBox spacing="40" alignment="CENTER_RIGHT">
                    <padding>
                        <Insets top="20" bottom="20" right="30"/>
                    </padding>
                    <Button text="ðŸ–¼ Manage Images"
                            layoutX="1120" layoutY="20"
                            styleClass="manage-btn" />
                </HBox>

                <!-- Centered Horizontal Layout -->
                <HBox spacing="40" alignment="CENTER_LEFT">

                    <!-- Left: Current Image Section -->
                    <VBox fx:id="imageContainer" spacing="10">
                        <Label text="CURRENT IMAGE" styleClass="subtitle"/>
                        <ImageView fx:id="questionImage"
                                   fitWidth="450"
                                   fitHeight="300"
                                   preserveRatio="true"
                                   style="-fx-border-color: gray;"/>
                    </VBox>

                    <!-- Middle: Answer Card -->
                    <VBox fx:id="answerCard" spacing="16" styleClass="answer-card" prefWidth="300" prefHeight="300">
                        <VBox spacing="5">
                            <Label text="Image Description" styleClass="answer-title"/>
                            <Label fx:id="imageDescription"
                                   text="No description available."
                                   wrapText="true"
                                   styleClass="answer-text"/>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Progress" styleClass="answer-title"/>
                            <ProgressBar fx:id="progressBar"
                                         progress="0.0"
                                         prefWidth="200"
                                         style="-fx-accent: green;" />
                        </VBox>
                    </VBox>
                </HBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="40" styleClass="bottom-bar">
            <padding>
                <Insets top="20" bottom="20" right="30"/>
            </padding>
            <children>

                <!-- Left: Buzzed Player Info + Buttons (in 1 line) -->
                <HBox alignment="CENTER_LEFT" spacing="20" styleClass="bottom-buzzer-box">
                    <Label text="Player 02 Buzzed!" styleClass="buzz-label"/>
                    <Button fx:id="correctBtn" text="Correct" styleClass="correct-btn"/>
                    <Button fx:id="wrongBtn" text="Wrong" styleClass="wrong-btn"/>
                </HBox>

                <!-- Spacer to push right-side controls -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Right: Timer on top, buttons below -->
                <VBox alignment="CENTER_RIGHT" spacing="10">
                    <Label text="0:46" styleClass="timer-label"/>
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button fx:id="unlockBtn" text="Unlock Buzzers ðŸ”’" styleClass="unlock-btn"/>
                        <Button fx:id="nextBtn" text="Next Question âž¤" styleClass="next-btn"/>
                    </HBox>
                </VBox>
            </children>
        </HBox>
    </bottom>


</BorderPane>
