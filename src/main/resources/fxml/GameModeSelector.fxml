<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.GameModeController">

    <center>
        <VBox alignment="TOP_CENTER" spacing="40" style="-fx-background-color: #f2f2f2;">
            <padding>
                <Insets top="100" bottom="40" left="40" right="40"/>
            </padding>

            <!-- Heading -->
            <VBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="40" bottom="0" left="100" right="0"/>
                </padding>
                <Label text="LUCKY EVENT" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="GAME MODE SELECTOR" style="-fx-font-size: 42px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Card Row -->
            <HBox alignment="CENTER" spacing="30">

                <!-- Questions Card -->
                <VBox styleClass="game-card" alignment="CENTER">
                    <ImageView fx:id="questionImage" fitWidth="150" fitHeight="100"/>
                    <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20;">
                        <Label text="Questions" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        <Label text="The explanation of the game is going to be here with a few words about how it works."
                               wrapText="true" style="-fx-font-weight: bold;"/>
                        <Button fx:id="startQuestionBtn" text="Start Question Game" styleClass="game-button"/>
                    </VBox>
                </VBox>

                <!-- Images Card -->
                <VBox styleClass="game-card" alignment="CENTER">
                    <ImageView fx:id="imageGameImage" fitWidth="150" fitHeight="100"/>
                    <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20;">
                        <Label text="Images" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        <Label text="The explanation of the game is going to be here with a few words about how it works."
                               wrapText="true" style="-fx-font-weight: bold;"/>
                        <Button fx:id="startImagesBtn" text="Start Images Game" styleClass="game-button"/>
                    </VBox>
                </VBox>

                <!-- Music Card -->
                <VBox styleClass="game-card" alignment="CENTER">
                    <ImageView fx:id="musicImage" fitWidth="150" fitHeight="100"/>
                    <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20;">
                        <Label text="Music" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        <Label text="The explanation of the game is going to be here with a few words about how it works."
                               wrapText="true" style="-fx-font-weight: bold;"/>
                        <Button fx:id="startMusicBtn" text="Start Music Game" styleClass="game-button"/>
                    </VBox>
                </VBox>
                <VBox styleClass="game-card" alignment="CENTER">
                    <ImageView fx:id="allInOneImage" fitWidth="150" fitHeight="100"/>
                    <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20;">
                        <Label text="All-in-One" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        <Label text="A shuffle of questions, images, and songs combined into one game mode."
                               wrapText="true" style="-fx-font-weight: bold;"/>
                        <Button fx:id="selectAllInOneBtn" text="Select All-in-One Game" styleClass="game-button"/>
                    </VBox>
                </VBox>

                <!-- Spontaneous Card -->
                <VBox styleClass="game-card" alignment="CENTER">
                    <ImageView fx:id="spontaneousImage" fitWidth="150" fitHeight="100"/>
                    <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20;">
                        <Label text="Spontaneous" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        <Label text="Unpredictable spontaneous game mode where surprises await."
                               wrapText="true" style="-fx-font-weight: bold;"/>
                        <Button fx:id="selectSpontaneousBtn" text="Select Spontaneous Game" styleClass="game-button"/>
                    </VBox>
                </VBox>

            </HBox>
        </VBox>
    </center>
</BorderPane>
